<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" autoconfigure="true"/>
        <service id="suminagashi_orchestra.annotation.translator" class="Suminagashi\OrchestraBundle\Utils\AnnotationTranslator" />
        <service id="suminagashi_orchestra.entity.parser" class="Suminagashi\OrchestraBundle\Utils\EntityParser" public="true">
            <argument type="service" id="annotations.reader" />
            <argument>%suminagashi_orchestra.resource_class_directories%</argument>
        </service>
        <service id="Suminagashi\OrchestraBundle\Utils\EntityParser" alias="suminagashi_orchestra.entity.parser" public="false" />
        <service id="suminagashi_orchestra.routing.doc_parser_loader" class="Suminagashi\OrchestraBundle\Routing\DocParserLoader">
            <tag name="routing.loader" />
        </service>

        <!--Controllers-->
        <service id="suminagashi_orchestra.controller.admin" class="Suminagashi\OrchestraBundle\Controller\OrchestraController" public="true">
            <argument type="service" id="suminagashi_orchestra.entity.parser" />
        </service>

        <!--Actions-->

        <service id="suminagashi_orchestra.action.api_abstract_action" class="Suminagashi\OrchestraBundle\Action\AbstractAction" public="true">
            <argument type="service" id="request_stack" />
        </service>

        <service id="suminagashi_orchestra.action.api_get_collection" class="Suminagashi\OrchestraBundle\Action\CollectionAction" public="true">
        </service>

        <service id="suminagashi_orchestra.action.api_get" class="Suminagashi\OrchestraBundle\Action\GetAction" public="true">
        </service>

        <service id="suminagashi_orchestra.action.api_put" class="Suminagashi\OrchestraBundle\Action\PutAction" public="true">
        </service>

        <service id="suminagashi_orchestra.action.api_patch" class="Suminagashi\OrchestraBundle\Action\PatchAction" public="true">
        </service>

        <service id="suminagashi_orchestra.action.api_post" class="Suminagashi\OrchestraBundle\Action\PostAction" public="true">
        </service>


    </services>
</container>
